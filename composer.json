{
    "name": "belca/support",
    "description": "Helper functions and classes for Belca components and any PHP projects.",
    "keywords": ["support", "array", "helpers", "html", "http", "string", "enum", "constants", "const", "laravel", "dios", "belca"],
    "license": "MIT",
    "authors": [
        {
            "name": "Oleg Dmitrochenko",
            "email": "dmitrochenkooleg@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "suggest": {
        "illuminate/support": "Needs for to uses Belca\\Support\\ServiceProvider version 5.*"
    },
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6"
    },
    "autoload": {
        "psr-4": {
            "Belca\\Support\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Belca\\Support\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests",
        "test-arr": "vendor/bin/phpunit --bootstrap vendor/autoload.php tests/ArrTest.php",
        "test-constants": "vendor/bin/phpunit --bootstrap vendor/autoload.php tests/AbstractConstansTest.php",
        "test-enum": "vendor/bin/phpunit --bootstrap vendor/autoload.php tests/AbstractEnumTest.php",
        "test-special-arr": "vendor/bin/phpunit --bootstrap vendor/autoload.php tests/SpecialArrTest.php",
        "test-html": "vendor/bin/phpunit --bootstrap vendor/autoload.php tests/HTMLTest.php",
        "test-str": "vendor/bin/phpunit --bootstrap vendor/autoload.php tests/StringTest.php"
    }
}
